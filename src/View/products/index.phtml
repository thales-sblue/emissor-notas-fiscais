<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Produtos</title>
  <link rel="stylesheet" href="/static/css/app.css">
  <script src="https://cdn.jsdelivr.net/npm/vue@3.4.15/dist/vue.global.prod.js"></script>
</head>
<body>
<div id="app" class="main-container">
  <h1 class="page-title">Produtos</h1>
  <p class="page-subtitle">Cadastre e visualize seus produtos com facilidade.</p>

  <div class="form-wrapper">
    <form @submit.prevent="createProduct" class="form-grid-modern">

      <div class="form-group full-width">
        <label for="name">Nome</label>
        <input id="name" v-model="newProduct.name" class="form-control" required>
      </div>

      <div class="form-group full-width">
        <label for="description">Descrição</label>
        <input id="description" v-model="newProduct.description" class="form-control">
      </div>

      <div class="form-group">
        <label for="unit">Unidade</label>
        <input id="unit" v-model="newProduct.unit" class="form-control">
      </div>

      <div class="form-group">
        <label for="price">Preço</label>
        <input id="price" v-model="newProduct.price" class="form-control" type="number" step="0.01" required>
      </div>

      <div class="form-group full-width text-end">
        <button class="neon-btn" type="submit">Cadastrar</button>
      </div>
    </form>
  </div>

  <div class="table-wrapper">
    <table class="neon-table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Unidade</th>
          <th>Preço</th>
        </tr>
      </thead>
      <tbody>
        <tr v-for="product in products" :key="product.id">
          <td>{{ product.name }}</td>
          <td>{{ product.description }}</td>
          <td>{{ product.unit }}</td>
          <td>R$ {{ parseFloat(product.price).toFixed(2) }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script src="/static/js/product.js"></script>
</body>
</html>
